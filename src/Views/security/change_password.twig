{% extends 'base.twig' %}

{% block title %}
	Change Password
{% endblock %}

{% block content %}
	<form name="change-password" method="POST" action="/change-password">
		<h1>Change Password</h1>
		{{ message }}
		<div>
			<input type="password" placeholder="Current Password" name="current">
		</div>
		<div>
			<input type="password" placeholder="New Password" name="new">
		</div>
		<div>
			<input type="password" placeholder="Repeat" name="repeat">
		</div>
		{% if page is defined %}
			<input type="hidden" name="required_page" value="{{ page }}">
		{% endif %}
		<button type="submit">Submit</button>
	</form>
{% endblock %}