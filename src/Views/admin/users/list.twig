{% extends 'base.twig' %}

{% block title %}
	Users List
{% endblock %}

{% block content %}
	<div class="block">
		<a href="/admin/users/add">New User</a>
		<table>
			<thead>
				<tr>
					<th>username</th>
					<th>role</th>
				</tr>
			</thead>
			<tbody>
				{% for user in users %}
					<tr>
						<td>{{ user.username }}</td>
						<td>{{ user.role }}</td>
					</tr>
				{% endfor %}
			</tbody>
		</table>
	</div>
{% endblock %}
